<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


<div class="banner-main-container" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/louisgadam/image/upload/v1621292532/yael-gonzalez-vdbOJuueLpU-unsplash_uxv8a4.jpg')">

  <div class="first-things">
    <h1>Find your <strong>fight location</strong>, you crazy fuck</h1>
    <%= link_to "Create your own location", "/locations/new", class: "btn-to-fight mb-4" %>
       <div class="search-form-control form-group">

      <%= form_tag locations_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control mb-4 mt-4",
          placeholder: "Find a location"
        %>
        <%= submit_tag "Search", class: "submit-search mb-4" %>
      <% end %>
    </div>

  </div>

  <div class="row mt 24">

    <div id="map"
        class="col-lg-6"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <div class="cards-trips">
      <% @locations.each do |location| %>
        <div class="card-trip col-lg-6">
           <%=cl_image_tag location.photos.first.key, class: "image-show" %>
          <div class="card-trip-infos">
            <div>
            <h2><%= location.name %></h2>
              <p><%= location.location %></p>
            </div>
            <div class="avatar-bordered">
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "avatar-bordered"%>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>


  </div>
</div>

