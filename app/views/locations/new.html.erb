<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new fight</h3>
        <%= simple_form_for @location do |f| %>
          <%= f.input :name, placeholder: "location name" %>
          <%= f.input :location, placeholder: "location" %>
        <% end %>
           <%= simple_form_for :search, method: "get" do |f| %>
          <%= f.input :starts_at, as: :string, required: false, input_html: { class: "datepicker", id: "range_start"}, placeholder: "dd-mm-year" %>
          <%= f.button :submit, "Let's fight", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

