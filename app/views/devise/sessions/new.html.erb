<div class="banner-main-container" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/louisgadam/image/upload/v1621292529/attentie-attentie-ig7vN6OkGNE-unsplash_1_trtz8w.jpg')">
  <div class="banner-container sign-up-form" >
    <h2>WELCOME BACK DICKHEAD </h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in"  %>
      </div>
    <% end %>


    <%= render "devise/shared/links" %>
  </div>
</div>
